<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns="http://www.55haitao.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<rule grade="0">
		<selectallpages input="${doc}" css="div.nav-parent a" attr="abs:href" cssTemplateUrl="div.pagination_pageNumbers>a:first-child" attrTemplateUrl="abs:href" cssTotalPages="div.pagination_pageNumbers>a:last-child" replaceRegex="pageNumber=\d+" replaceFormat="pageNumber={}"  output="newurls" grade="1"/>
	</rule>
	<rule grade="1">
		<selecturls input="${doc}" css="p.product-name>a" attr="abs:href" type="ITEM" output="newurls" grade="2"/>
	</rule>
	<rule grade="2" regex=".*www.mankind.co.uk.*">
		<mankind input="${html}" output="retbody"/>		
		<output channel="kafka" fields="retbody" />
	</rule>
</rules>
